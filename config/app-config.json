{
  "connection": {
    "url": "ws://192.168.1.161:8765"
  },
  "pointcloud": {
    "topic": "/cloud_registered",
    "decayTimeSeconds": 10,
    "maxPoints": 0,
    "pointFilterNumber": 1,
    "pointSize": 0.1,
    "latestScanPointSize": 2.5,
    "latestScanMode": "brighter-red",
    "fov": 120,
    "dynamicLatestPointScaling": true,
    "colorMode": "rgb"
  },
  "camera": {
    "topic": "/trigger_cam/image_raw/compressed"
  },
  "tf": {
    "topic": "/tf",
    "arrowLength": 0.2,
    "arrowWidth": 0.02,
    "smoothing": 0,
    "follow": {
      "frameId": "aft_mapped",
      "smoothing": 0
    }
  },
  "path": {
    "enabled": true,
    "topic": "/path",
    "lineWidth": 2,
    "color": "#00ff00"
  },
  "supervisor": {
    "topic": "/supervisor/status",
    "service": "/supervisor/command"
  },
  "nodes": {
    "exclude": ["/rosout", "/foxglove_nodelet_manager"],
    "launch": [
      {
        "package": "fast_lio",
        "launchFile": "mapping_ouster64_jetson.launch",
        "args": [ { "key": "rviz", "value": "false" } ]
      },
      {
        "package": "fast_livo",
        "launchFile": "mapping_ouster_ntu.launch",
        "args": [ { "key": "rviz", "value": "false" } ]
      },
      {
        "package": "ouster_ros",
        "launchFile": "driver.launch",
        "args": [ { "key": "sensor_hostname", "value": "192.168.100.2" },
                  { "key": "organized", "value": "false" },
                  { "key": "viz", "value": "false" }
        ]
      },
      {
        "package": "trigger_cam",
        "launchFile": "trigger_cam.launch",
        "args": [ { "key": "device", "value": "/dev/video0" },
                  { "key": "trigger_mode", "value": "true" }
        ]
      },
       {
        "package": "emlid_reach_ros",
        "launchFile": "reach_ros.launch",
        "args": [ { "key": "port", "value": "/dev/ttyACM0" } ]
      }
    ]
  },
  "recorder": {
    "topics": [
      "/ouster/points",
      "/ouster/imu"
    ]
  },
  "recording": {
    "mode": "video",
    "fps": 30,
    "codec": "h264",
    "bitrate": 100,
    "format": "png",
    "quality": 1.0
  }
}
